<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AadhaarDetailsActivity">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/logo_back"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/clg_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/ritlogo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/college_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/logo"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Raghu Institute Of Technology (A)"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/college_title"
                android:layout_toRightOf="@+id/logo"
                android:layout_weight="1"
                android:paddingHorizontal="5dp"
                android:paddingBottom="5dp"
                android:text="Department Of ECE"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dmslogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/dmslogo" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/ll1"
        android:layout_above="@+id/ll2"
        android:layout_margin="5dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_bold"
                android:text="Aadhar Details"
                android:textColor="@color/apsche_orange"
                android:textSize="24dp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:text="Student Aadhar"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/studentAadhaar"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/text_back"
                        android:ems="10"
                        android:hint="Enter Aadhaar Number"
                        android:inputType="number"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="20dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:text="Upload Student Aadhar Photo"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Upload Image"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_image"
                        android:drawableEnd="@drawable/ic_file_upload"/>

                    <Button
                        android:id="@+id/Upload1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/blue"
                        android:text="Upload"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:cornerRadius="20dp" />

                    <TextView
                        android:id="@+id/rei"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:text="Father Aadhar"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/aadharfather"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/text_back"
                        android:ems="10"
                        android:hint="Enter Aadhar Number"
                        android:inputType="number"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="20dp" />


                    <TextView
                        android:id="@+id/aadh2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:text="Upload Father Aadhar Photo"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pic2"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/text_back"
                        android:ems="10"
                        android:hint="Upload Pic"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/Upload2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/blue"
                        android:text="Upload"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:cornerRadius="20dp" />


                    <TextView
                        android:id="@+id/aaddddd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:text="Mother Aadhar"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/aadharmother"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/text_back"
                        android:ems="10"
                        android:hint="Enter Aadhar Number"
                        android:inputType="number"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="20dp" />


                    <TextView
                        android:id="@+id/aadh3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:text="Upload Mother Aadhar Photo"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pic3"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/text_back"
                        android:ems="10"
                        android:hint="Upload Pic"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/Upload3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/blue"
                        android:text="Upload"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:cornerRadius="20dp" />


                    <TextView
                        android:id="@+id/addd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:text="Guardian Aadhar"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/Gardianaa"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/text_back"
                        android:ems="10"
                        android:hint="Enter Aadhar Number"
                        android:inputType="number"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="20dp" />


                    <TextView
                        android:id="@+id/aadh4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:text="Upload Guardian Aadhar Photo"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pic4"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/text_back"
                        android:ems="10"
                        android:hint="Upload Pic"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/Upload4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/blue"
                        android:text="Upload"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:cornerRadius="20dp" />

                    <Button
                        android:id="@+id/Update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/apsche_orange"
                        android:text="Update"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:cornerRadius="20dp" />









                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/logo_back">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All Rights Reserved"
            android:textAlignment="textEnd"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text=" @Raghu Institute of Technology"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>